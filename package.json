{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "// ============ Development ============": "",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:docs": "turbo dev --filter=docs",
    "dev:all": "turbo dev --filter='./apps/*'",
    "// ============ Build ============": "",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:docs": "turbo build --filter=docs",
    "build:cli": "turbo build --filter=@devathedeveloper/cli",
    "build:ui": "turbo build --filter=@workspace/ui",
    "// ============ Workspace Shortcuts ============": "",
    "cli": "pnpm --filter @devathedeveloper/cli",
    "web": "pnpm --filter web",
    "docs": "pnpm --filter docs",
    "ui": "pnpm --filter @workspace/ui",
    "// ============ CLI Commands ============": "",
    "cli:build": "pnpm cli run build",
    "cli:dev": "pnpm cli run dev",
    "cli:init": "pnpm cli exec agencyui init",
    "cli:typecheck": "pnpm cli run typecheck",
    "// ============ UI Package ============": "",
    "ui:build": "pnpm ui run build",
    "ui:dev": "pnpm ui run dev",
    "// ============ Code Quality ============": "",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo typecheck",
    "// ============ Utilities ============": "",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "clean:workspace": "turbo clean",
    "reinstall": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@devathedeveloper/cli": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
